<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Modify portions of <%= @recipe.name %></h1>
  <%= link_to "↩️ back to the recipe", recipe_path(@recipe), class: 'btn btn-outline-primary  btn-sm' %>
</div>

<%= simple_form_for :recipe, url: run_edit_portions_recipe_messages_path(@recipe), method: :post do |f| %>
  <p>Your recipe is currently for <%= @recipe.portions_displayed ? @recipe.portions_displayed : @recipe.portions %> people.</p>
  <div class="mb-3">
    <%= f.input :new_portions, label: "For how many people do you want to cook this recipe ?", input_html: {
            value: @recipe.portions_displayed ? @recipe.portions_displayed : @recipe.portions,
            min: 1,
            class: "form-control"
          },
          as: :integer %>
  </div>
  <%= f.button :submit, "Recalculate portions", class: "btn btn-primary" %>
<% end %>
