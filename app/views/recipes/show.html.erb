    </div>

    <div class="card-body text-center">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="card-title text-center flex-grow-1 m-0"><%= @recipe.name %></h1>
        <%= button_to "ðŸ”„ï¸ Reset",  reset_recipe_recipe_path(@recipe),method: :patch, class: "btn btn-outline-secondary btn-sm" %>
      </div>


      <h5 class="text-start">Portions</h5>
      <p class="text-start"><%= @recipe.portions_displayed == nil ? simple_format(" Recipe for #{@recipe.portions} people") : simple_format(" Recipe for #{@recipe.portions_displayed} people")%></p>
      <%= link_to "ðŸ™‹â€â™‚ï¸ Change portions", edit_portions_recipe_messages_path(@recipe), class: "btn btn-outline-secondary btn-sm" %>

      <h5 class="text-start">Ingredients</h5>
      <p class="text-start"><%= @recipe.ingredients_displayed == nil ? simple_format(@recipe.ingredients) : simple_format(@recipe.ingredients_displayed)%></p>
      <%= link_to "ðŸ† Change ingredients", edit_ingredients_recipe_messages_path(@recipe), class: "btn btn-outline-secondary btn-sm" %>

