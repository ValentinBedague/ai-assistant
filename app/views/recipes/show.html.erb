      <%= link_to "ðŸª„ Chat with the assistant", recipe_chats_path(@recipe), class: "my-2 btn btn-outline-secondary btn-sm" %>
      <%= button_to "ðŸ”„ï¸ Reset",  reset_recipe_recipe_path(@recipe),method: :patch, class: "my-2 btn btn-outline-secondary btn-sm" %>
    </div>
  </div>
</div>
